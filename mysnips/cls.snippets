extends java

snippet deb "salesforce debug" b
System.debug(${1:message});
endsnippet


snippet list "Collections List" b
List<${1:String}> ${2:list} = new List<$1>();
endsnippet

snippet map "Collections Map" b
Map<${1:String}, ${2:String}> ${3:map} = new Map<$1, $2>();
endsnippet

snippet set "Collections Set" b
Set<${1:String}> ${2:set} = new Set<$1>();
endsnippet

snippet prop "Property"
public ${1:Object} ${2:obj} {get;set;}
endsnippet
	

snippet fors "SOQL For Loop" b
for(${1:SObject} ${2:rec}:[Select ${3:Id} from $1]){
	${4}
}
endsnippet

snippet fore "for each loop" b
for(${1:String} ${2:theString}: ${3:strArray}){
	$4
}
endsnippet

snippet mapl "Check Map and Add to List" b
if(${1:MapName}.containsKey(${2:key}){
	$1.get($2).add(${3:newValue});
}else{
	$1.put($2,new List<${4:Object}>{$3});
}
endsnippet

snippet ase "assert equals" b
System.assertEquals(${1:expected},${2:actual});
endsnippet

snippet asne "assert not equals" b
System.assertNotEquals(${1:expected},${2:actual});
endsnippet

snippet soql "SOQL"
[Select ${1:Id} from ${2:Account}];
endsnippet

snippet sqv "SOQL to variable" b
List<${1:Account}> ${2:accts} = [Select ${3:Id} from $1];
endsnippet


snippet sqm "SOQL to Map variable" b
Map<Id,${1:Account}> ${2:acctsMap} = new Map<Id,$1>([Select ${3:Id} from $1]);
endsnippet

snippet supp "PMD SuppressWarnings" b
@SuppressWarnings('PMD.$1')
endsnippet
	
