endsnippet

snippet cls "New Class" b
public with sharing class `!p snip.rv=fn.replace('.cls','')`{
	$1
}
endsnippet

snippet rtype "Record Type lookup"
Id ${1:recordtypeId} = Schema.SObjectType.${2:Account}.getRecordTypeInfosByDeveloperName().get('${3:record_type}').getRecordTypeId();
